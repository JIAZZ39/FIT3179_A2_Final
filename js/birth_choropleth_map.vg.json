{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height":300,
  "projection": {
    "type": "mercator", 
    "center":[109,4],
    "scale":2200
  },

  "layer": [
    
    {
      "data": {
        "url": "data/ne_10m_ocean.topojson.json",
        "format": {"type": "topojson", "feature": "ne_10m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#c9e6ef"}
    },


    {
      "data": {
        "url": "data/ne_10m_graticules_1.topojson.json",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#d9d9d9"}
    },

    {
      "data": {
        "url": "data/ne_10m_land.topojson.json",
        "format": {"type": "topojson", "feature": "ne_10m_land"}
      },
      "mark": {"type": "geoshape", "fill": "#f0f0f0", "stroke": "#a8a8a8"}
    },
    
    {
      "data": {
        "url": "data/ne_10m_admin_1_msia_states.topojson.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "data/2021_birth_population_by_state.csv"
            },
           
            "key": "state", 
            "fields": ["Birth_Rate_per_1000", "birth raw", "population raw", "state"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Birth_Rate_per_1000",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [12, 15, 18],
            "scheme": "purples"
          },
          "title": "Births per 1,000 People"
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"}, 
          {"field": "Birth_Rate_per_1000", "type": "quantitative", "title": "Birth Rate (per 1,000)", "format": ".2f"},
          {"field": "birth raw", "type": "quantitative", "title": "Total Births", "format": ","},
          {"field": "population raw", "type": "quantitative", "title": "Total Population", "format": ","}
        ]
      }
    },

        {
      "data": {
        "url": "data/ne_10m_admin_1_msia_states.topojson.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {"url": "data/2021_birth_population_by_state.csv"},
            "key": "state",
            "fields": ["Birth_Rate_per_1000", "state"]
          }
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "Birth_Rate_per_1000", "order": "descending"}]
        },
        {"filter": "datum.rank == 1"},
        {
          "calculate": "'Highest Birth Rate: ' + datum.state + ' (' + format(datum.Birth_Rate_per_1000, '.2f') + ' per 1,000 people)'",
          "as": "label"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "geoshape",
            "fill": "darkgoldenrod",
            "stroke": "black",
            "strokeWidth": 2
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "dx": -200,
            "dy": -50,
            "fontSize": 13,
            "fontWeight": "bold",
            "color": "darkgoldenrod"
          },
          "encoding": {
            "text": {"field": "label"}
          }
        }
      ]
    }
  ],
    "config":{
    "legend": {
      "titleFontSize": 12
    }
  }
}






